{
  "manifest_version": 2,
  "name": "Dont Show Me This",
  "description": "Chrome Extension to hide certain content from social networks",
  "version": "1.0",
  "page_action": {
    "default_title": "Dont Show Me This"
  },
  "options_ui": {
      "page": "options.html",
      "chrome_style": true
  },
  "content_scripts": [
      {
        "matches": ["https://www.facebook.com/*", "https://twitter.com/*", "https://westus.api.cognitive.microsoft.com/*"],
        "js": ["bower_components/jquery/dist/jquery.js", "js/algorithmia.js", "js/main.js"]
      }
    ],
  "permissions": [
    "storage",
    "activeTab",
    "https://api.algorithmia.com/v1/web/algo/spullara/YahooOpenNSFW/0.1.1"
  ]
}
