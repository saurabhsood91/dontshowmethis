{
  "manifest_version": 2,
  "name": "Social Tag",
  "description": "Chrome Extension to hide certain content from social networks",
  "version": "1.0",
  "page_action": {
    "default_title": "Social Tag",
    "default_icon": {
            "16": "icon16.png",
            "128": "icon128.png"
          }
  },
  "options_ui": {
      "page": "options.html",
      "chrome_style": true
  },
  "content_scripts": [
      {
        "matches": ["https://www.facebook.com/*", "https://twitter.com/*", "https://westus.api.cognitive.microsoft.com/*", "https://api.projectoxford.ai/*"],
        "js": ["bower_components/jquery/dist/jquery.js", "js/algorithmia.js", "js/main.js"]
      }
    ],
  "icons": { 
      "16": "icon16.png",
      "128": "icon128.png" 
    },

  "permissions": [
    "storage",
    "activeTab",
    "https://api.algorithmia.com/v1/web/algo/spullara/YahooOpenNSFW/0.1.1"
  ]
}
